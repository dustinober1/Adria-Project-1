# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/adria_dev

# JWT Configuration
# IMPORTANT: Change JWT_SECRET in production to a strong, random string (minimum 32 characters)
# Generate with: openssl rand -base64 32
# Note: We use the same secret for both access and refresh tokens for simplicity
# Access tokens are short-lived (7 days), refresh tokens are long-lived (30 days)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@adriacross.com
SENDGRID_ADMIN_EMAIL=admin@adriacross.com
SENDGRID_REPLY_TO=support@adriacross.com
EMAIL_ENABLED=true

# reCAPTCHA v3
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_MIN_SCORE=0.5

# Contact form rate limiting
CONTACT_RATE_LIMIT_MAX=3
CONTACT_RATE_LIMIT_WINDOW_MS=3600000
# Intake form submissions rate limiting
FORMS_RATE_LIMIT_MAX=5
FORMS_RATE_LIMIT_WINDOW_MS=3600000

# Admin dashboard URL for deep-links in notification emails
ADMIN_DASHBOARD_URL=http://localhost:3000/admin/inquiries
ADMIN_FORMS_URL=http://localhost:3000/admin/forms

# Google Cloud
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=adria-files
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
